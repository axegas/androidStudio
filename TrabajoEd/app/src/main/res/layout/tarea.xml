<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/layoutVista"
    android:background="@drawable/borde"
    >

    <LinearLayout
        android:id="@+id/horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/vistaAsignatura"
                style="@style/camposVista"
                android:text="@string/vistaAsignatura" />

            <TextView
                android:id="@+id/vistaFecha"
                style="@style/camposVista"
                android:text="@string/vistaFecha" />

            <TextView
                android:id="@+id/vistaDescripcion"
                style="@style/camposVista"
                android:text="@string/vistaDescripcion" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="311dp"
            android:layout_marginRight="311dp"
            android:orientation="vertical">

            <ToggleButton
                android:id="@+id/toggleButton"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="@string/togglebutton"
                android:textOff="@string/pendiente"
                android:textOn="@string/acabada" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>