<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layoutVista"
    android:background="@drawable/borde">

    <TextView
        android:id="@+id/vistaNombre"
        style="@style/camposVista"
        android:text="@string/vistaNombre" />

    <TextView
        android:id="@+id/vistaDNI"
        style="@style/camposVista"
        android:layout_below="@id/vistaNombre"
        android:text="@string/vistaDNI" />

    <TextView
        android:id="@+id/vistaEdad"
        style="@style/camposVista"
        android:layout_below="@id/vistaDNI"
        android:text="@string/vistaEdad" />

    <TextView
        android:id="@+id/vistaCategoria"
        style="@style/camposVista"
        android:layout_below="@id/vistaEdad"
        android:text="@string/vistaCategoria" />

</RelativeLayout>